<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- GIF Background -->
    <ImageView
        android:id="@+id/gifBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!-- Optional Overlay to dim background for better text visibility -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000" />

    <!-- Foreground Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Logo and Welcome -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_medical_cross"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_title"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connecting you to better healthcare"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/primary_blue"
                android:backgroundTint="@android:color/white"
                android:elevation="6dp"
                android:layout_marginBottom="12dp"
                android:paddingVertical="12dp"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary_green"
                android:elevation="6dp"
                android:paddingVertical="12dp" />

            <TextView
                android:id="@+id/tvDoctorPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you a doctor? Register as a healthcare provider"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_marginTop="18dp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
